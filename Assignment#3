#include <iostream>
#include <string>
using namespace std;

int main ()
{
	string a;
	cout << "What is your name: ";
	cin >> a;

    int b;
	cout << "Enter a whole number: " << endl;
	cin >> b;
	
	double c;
	cout << "Enter a number with a 2 digit decimal: ";
	cin >> c;
	
	double result1;
	result1 = b + c;
	
	double result2;
	result2 = b - c;

	cout << "Hi " << a << ", I've calculated that " << b << " + " << c << " is " << result1 << ", and " << b << " - " << c << " = " << result2 << endl;
}
